{
  "extends": "./tsconfig.base",
  "compilerOptions": {
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "@core": ["./packages/*"],
      "core/app/*": ["packages/app/*"]
    }
  },
  "exclude": [
    ".next",
    "**/node_modules",
    "**/dist",
    "**/types",
    "apps/next/out",
    "./apps/next/.next",
    "./apps/next/.tamagui"
  ]
}
